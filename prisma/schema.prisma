generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/rayvengers"
}

model User {
  id        String   @id @default(cuid())
  name      String
  firstname String?
  lastname  String?
  email     String   @unique
  age       Int
  section   String
  isDeleted Boolean  @default(false)
  role      String
  birthday  DateTime
  password  String

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  LobbyUser LobbyUser[]

  @@index([name]) // Indexing for performance
}

model Lobby {
  id         String      @id @default(cuid())
  name       String
  status     LobbyStatus @default(WAITING) // WAITING, IN_PROGRESS, FINISHED
  maxPlayers Int         @default(4)
  createdBy  String
  users      LobbyUser[]
  createdAt  DateTime    @default(now())
}

model LobbyUser {
  id      String  @id @default(cuid())
  isReady Boolean @default(false)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  lobbyId String
  lobby   Lobby  @relation(fields: [lobbyId], references: [id])

  @@unique([userId, lobbyId]) // one user per lobby
}

enum LobbyStatus {
  WAITING
  IN_PROGRESS
  FINISHED
}
