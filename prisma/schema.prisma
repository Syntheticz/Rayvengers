generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/rayvengers"
}

model User {
  id        String   @id @default(cuid())
  name      String
  firstname String?
  lastname  String?
  email     String   @unique
  age       Int
  section   String
  isDeleted Boolean  @default(false)
  role      String
  birthday  DateTime
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name]) // Indexing for performance
}
